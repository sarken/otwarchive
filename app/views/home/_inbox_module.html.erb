<% # expects inbox_comments %>
<div class="latest messages module">
  <h3 class="heading">
    <span class="title"><%= ts('Unread messages') %></span>
    <span class="link"><%= link_to ts('My Inbox'), user_inbox_path(current_user) %></span>
  </h3>
  <div class="flash"></div>
  <p class="note"><%= ts('The latest unread items from your inbox.') %></p>
  <ul class="abbreviated comment group">
    <% inbox_comments.each do |inbox_comment| %>
      <li class="<% if inbox_comment.item.is_a?(Comment) && inbox_comment.item.unreviewed? %>unreviewed <% end %>unread comment group" id="feedback_comment_<%= inbox_comment.item_id %>">
        <% if inbox_comment.item.is_a?(Comment) %>
          <%= render "inbox/inbox_comment_contents", feedback_comment: inbox_comment.item %>
        <% elsif inbox_comment.item.is_a?(SubscriptionAlert) %>
          <%= render "inbox/inbox_subscription_alert_contents", feedback_comment: inbox_comment.item %>
        <% end %>
        <ul class="actions">
          <% if inbox_comment.item.is_a?(Comment) && inbox_comment.item.unreviewed? %>
            <li class="approve review" id="review_comment_link_<%= inbox_comment.item_id %>">
              <%= render 'inbox/approve_button', feedback_comment: inbox_comment.item_id, approved_from: "home" %>
            </li>
          <% elsif inbox_comment.item.is_a?(Comment) %>
            <li>
              <%= render 'inbox/reply_button', feedback_comment: inbox_comment.item %>
            </li>
          <% end %>
          <li id="read_comment_form_<%= inbox_comment.item.id %>">
            <%= render 'inbox/read_form', inbox_comment: inbox_comment, current_user: current_user %>
          </li>
          <li>
            <%= render 'inbox/delete_form', inbox_comment: inbox_comment, current_user: current_user %>
          </li>
        </ul>
      </li>
    <% end %>
  </ul>
  <div id="reply-to-comment" class="dynamic hidden"></div>
</div>
