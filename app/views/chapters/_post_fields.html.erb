<fieldset>
  <legend><%= t(".legend") %></legend>
  <p class="notice">
    <%= t(".post_notice_html",
          content_policy_link: link_to(t(".content_policy"), content_path),
          tos_faq_link: link_to(t(".tos_faq"), tos_faq_path(anchor: "content_faq"))) %>
  </p>
  <ul class="actions">
    <% if @chapter.posted? %>
      <% if @preview_mode %>
        <li><%= link_to t(".actions.edit"), edit_work_chapter_path(@work, @chapter) %></li>
      <% else %>
        <li><%= submit_tag t(".actions.preview"), name: "preview_button" %></li>
      <% end %>
      <li><%= submit_tag t(".actions.update"), name: "update_button" %></li>
    <% else %>
      <li><%= submit_tag t(".actions.save_draft"), name: "save_button" %></li>
      <% if @preview_mode %>
        <li><%= link_to t(".actions.edit"), edit_work_chapter_path(@work, @chapter) %></li>
      <% else %>
        <li><%= submit_tag t(".actions.preview"), name: "preview_button" %></li>
      <% end %>
      <li><%= submit_tag t("w.actions.post"),
                name: @preview_mode ? "post_button" : "post_without_preview_button",
                data: { disable_with: t(".actions.please_wait") } %></li>
    <% end %>
    <li><%= link_to t(".actions.cancel"), @chapter.new_record? ? work_path(@work) : work_chapter_path(@work, @chapter) %></li>
  </ul>
</fieldset>
