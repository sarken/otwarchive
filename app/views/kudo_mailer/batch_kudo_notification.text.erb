<% content_for :message do %>
  <% @commentables.each_with_index do |commentable, index| %>
    <%
      givers_list = @kudo_givers["#{commentable.class.name}_#{commentable.id}"].to_sentence
      commentable_link = "\"#{commentable.commentable_name.html_safe}\" (#{polymorphic_url(commentable)})".html_safe
    %>

    <%= t 'mailer.kudos.text.left_kudos', givers_list: givers_list, commentable_link: commentable_link, count: @kudos_count.to_i %>
    Count for pluralization: <%= @kudos_count %> (<%= @kudos_count.class %>) | Names: <%= @names %> | Names size: <%= @names_size %> (<%= @names_size.class %>) | Guest count: <%= @guest_count %> (<%= @guest_count.class %>) | Commentable ID: <%= @cid %>

    <% if (index < @commentables.length-1) %>
      <%= text_divider %>
    <% end %>
  <% end %>
  The hash we're working with for this email:
  <%= @kh %>
<% end %>
