<% # expects author %>
<div class="header module">
  <h4 class="heading">
    <%= link_to(author.name, user_pseud_path(author.user, author)) %> 
    <% if (author.name != author.user.login) %>
      (<%= link_to(author.user_name, user_path(author.user)) %>)
    <% end %>
  </h4>
  <% if @subscriptions %> 
    <h5 class="heading">
      <% # On the subscriptions page, we want the user work count %>
      <% work_count = User.find(author.user_id).visible_work_count %>
      <%= ts("Works: %{count}", count: work_count) %>
    </h5>
  <% elsif !authored_items(author, @work_counts, @rec_counts).blank? %>
    <h5 class="heading">
      <%= authored_items(author, @work_counts, @rec_counts) %>
    </h5>
  <% end %>
  <div class="icon">
    <%= icon_display(author.user, author) %>
  </div>
</div>
<% unless author.description.blank? %>
  <blockquote class="userstuff">
    <p><%=raw sanitize_field(author, :description) %></p>
  </blockquote>
<% end %>
