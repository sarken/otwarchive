<h2 class="heading">
  <%= t(".heading_html",
         title: link_to(@work.title, @work),
         byline: byline(@work)) %>
</h2>

<ol class="chapter index group" role="navigation">
  <% for chapter in @chapters %>
    <li>
      <%= link_to chapter.display_title.html_safe, [chapter.work, chapter] %> 
      <span class="words">
        <%= t(".word_count", count: chapter.word_count) %>
      </span>
      <span class="datetime">
        (<%= chapter.published_at.to_date %>)
      </span>
    </li>
  <% end %>
</ol>
