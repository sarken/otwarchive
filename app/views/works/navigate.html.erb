<h2 class="heading">
  <%= ts("Chapter Index for %{title} by %{creator}",
         title: link_to(@work.title.html_safe, @work),
         creator: byline(@work)).html_safe %>
</h2>

<ol class="chapter index group" role="navigation">
  <% for chapter in @chapters %>
    <li>
      <%= link_to chapter.display_title.html_safe, [chapter.work, chapter] %> 
      <span class="words">
        (<%= ts("%{count} words", count: chapter.word_count) %>)
      </span>
      <span class="datetime">
        (<%= chapter.published_at.to_date %>)
      </span>
    </li>
  <% end %>
</ol>
