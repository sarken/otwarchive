<% content_for :message do %>
  <p><%= t("mailer.general.greeting.informal.addressed", name: style_bold(@user.login)).html_safe %></p>

  <p>
    <% if @collection %>
      <%= t("gift.collection", collection_title: @collection.title) %>
    <% else %>
      <%= t("gift.no_collection") %>
    <% end %>
  </p>

  <p>
    <% work_url = if @collection
                    collection_work_url(@collection, @work)
                  else
                    work_url(@work)
                  end %>
    <%= t(".html.title_word_count",
          work_link: style_creation_link(@work.title, work_url),
          word_count: @work.word_count).html_safe %>
    <br />
    <% if @work.anonymous? %>
      <%= t("byline.anonymous") %>
    <% else %>
      <%= t("byline.named",
            pseud_list: @work.pseuds.map { |p| style_pseud_link(p) }
                        .to_sentence.html_safe).html_safe %>
    <% end %>
    <% unless @work.fandom_string.blank? %>
      <br />
      <%= style_bold("Fandom:") %> <%= @work.fandom_string %>
    <% end %>
  </p>

  <% unless @work.summary.blank? %>
    <p>
      <%= style_bold("Summary:") %>
      <%= style_quote(raw sanitize_field(@work, :summary)) %>
    </p>
  <% end %>

  <% if @collection && !@collection.gift_notification.blank? %>
    <p><%= @collection.gift_notification %></p>
  <% end %>
<% end %>
